<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect_round_corners"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_hegiht"
            app:srcCompat="@drawable/ic_checked"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usrename"
            android:textSize="32sp"

            android:layout_marginBottom="20dp"
            android:id="@+id/coupon_succes_username"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/textView28"
            android:text="Hi"
            android:textColor="@color/pink900"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <com.elf.elfstudent.CustomUI.UbuntuRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/coupon_sucess_applied"

        android:id="@+id/textView31"
        android:textColor="#808080"
        android:text="Applied succesfully"
        android:gravity="center"
        android:textSize="22sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="98"
        android:textColor="@color/pink900"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="@dimen/copon_sucess_98"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test have been added in Each Subject"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#808080"
        android:layout_marginTop="40dp"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:id="@+id/coupon_sucess_button3"
        android:background="@drawable/pink_login_rounded"
        android:text="close"
        android:textColor="@color/white_light"


        android:layout_alignTop="@+id/textView32"
        android:layout_marginTop="62dp"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout" />


</RelativeLayout>